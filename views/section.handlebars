<!-- content here My Refrigerator -->
<div class="rounded container col-10 p-2 w-100 m-3 mx-auto">
  <div class="row" id="section-container">
    <div class="rounded mx-3 p-2 mb-3 btn-block" style="background-color: #ffb202;">
      <div class="runningLow w-100 mx-auto p-1">
        <span>
          <h2>{{name}}</h2>
        </span>
        <div class="row">
          <span class="rounded col-md-5 mx-3">
            <button type="button" class="btn btn-success btn-sm" id="add" data-toggle="modal"
              data-target="#addModal">+Add New Item</button>
          </span>
        </div>
      </div>
      <h6>
        <!-- populate section items here -->
        {{#each items as |item|}}
        <div style="background-color: #ff9a4a;" class="row rounded my-2 runningLow w-100 mx-auto p-1">
          <span class="col-2">{{item.name}}</span>
          <span class="col-2">{{item.quantity}} {{unit_of_measurement}}</span>
          <span class="col-2">{{item.type}}</span>
          <span class="col-2">{{exp_date}}</span>
          <span class="col-3 text-right">
            <button type="button" class="btn btn-primary btn-sm update-btn" data-toggle="modal" id={{id}}
              data-target="#updateModal" data-name="{{ingredient.name}}" data-qty="{{ingredient.quantity}}"
              data-cat="{{ingredient.category}}" data-id={{id}}>Update</button>
            <button type="button" class="btn btn-danger btn-sm delete" data-id="{{ingredient.id}}"><i
                class="far fa-trash-alt"></i></button>
          </span>
        </div>
        {{/each}}
      </h6>
    </div>
  </div>
</div>
</div>

<!-- update modal -->
