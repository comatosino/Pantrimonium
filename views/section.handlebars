  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">Update Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form class="update-form" id="update-item-form">
        <div class="modal-body">
          {{!-- <div class="form-group">
            <label for="updateModalTitle" class="col-form-label">Name:</label>
            <input type="text" class="form-control" id="updateModalName">
            <input type="hidden" id="updateID">
          </div> --}}
          <div class="form-group">
            <label for="updateModalText" class="col-form-label">Quantity:</label>
            <input type="number" class="form-control" id="updateModalQty2">
          </div>

          {{!-- <div class="form-group">
            <label for="updateModalText" class="col-form-label">Type:</label>
            <input type="text" class="form-control" id="updateModalQty">
          </div> --}}

          <div class="form-group">
            <label for="addModalExp" class="col-form-label">Expiration Date:</label>
            <input type="date" class="form-control" id="addModalExp2">
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="update-btn" type="submit" class="btn btn-primary" data-dismiss="modal">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Add modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addModalLabel">Add Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

        <form id="new-section-item-form" class="modal-body">
          <div class="form-group">
            <label for="addModalName3" class="col-form-label">Name:</label>
            <input type="text" class="form-control" id="addModalName3">
            <input type="hidden" id="addID">
          </div>

          <div class="form-group">
            <label for="addModalQty3" class="col-form-label">Quantity:</label>
            <input type="number" class="form-control" id="addModalQty3">
          </div>

          <div class="form-group">
            <label for="addModalCat3" class="col-form-label">Type:</label>
            <input type="text" class="form-control" id="addModalCat3">
          </div>

          <div class="form-group">
            <label for="addModalUOM3" class="col-form-label">Unit of Measure (gallon/lbs/oz/dozen):</label>
            <input type="text" class="form-control" id="addModalUOM3">
          </div>

          <div class="form-group">
            <label for="addModalPar3" class="col-form-label">Re-order Level:</label>
            <input type="number" class="form-control" id="addModalPar3">
          </div>
          <div class="form-group">
            <label for="addModalExp3" class="col-form-label">Expiration Date:</label>
            <input type="date" class="form-control" id="addModalExp3">
          </div>
          {{!-- </div> --}}
          <div class="form-group">
            <label for="addModalSec3" class="col-form-label">Where do you want this item?:</label>
            <select id="addModalSec3" name="addModalSec3">
              {{#each sectionNames as |name|}}
              <option value={{name}}>{{name}}</option>
              {{/each}}
            </select>
          </div>
          {{!-- <div class="add-form"> --}}
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="add-btn" type="button" class="btn btn-success">Add</button>
          </div>
          {{!-- </div> --}}
        </form>
  </div>
</div>
</div>

