<!-- content here My Recipe's -->
<div class="rounded container col-10 p-2 w-100 m-3 mx-auto">
  <div class="row">
    <div class="rounded col-md-5 mx-3">
      <button type="button" class="btn btn-dark rounded mx-3 p-2 mb-3 text-center align-middle btn-block">+New Recipe</button>
    </div>  
  </div>
  <div class="row">
      <div class="rounded mx-3 p-2 mb-3 btn-block"  style="background-color: #ffb202;">
          <div class="runningLow w-100 mx-auto p-1">
              <span><h2>My Recipe's</h2></span>
          </div>
          <h6>
          <div style="background-color: #ff9a4a;" class="row rounded my-2 runningLow w-100 mx-auto p-1">
              <span>Recipe #1</span>
              <span>Description</span>
              <span>Number of Items</span>

              <span>
              <button type="button" class="btn btn-danger btn-sm" id="delete" data-id="{{ingredients.id}}"><i class="far fa-trash-alt"></i></button>
              </span>
          </div>

          <div style="background-color: #ff9a4a;" class="row rounded my-2 runningLow w-100 mx-auto p-1">
            <span>Recipe #2</span>
            <span>Description</span>
            <span>Number of Items</span>

            <span>
              <button type="button" class="btn btn-danger btn-sm" id="delete" data-id="{{ingredients.id}}"><i class="far fa-trash-alt"></i></button>
          </span>                
          </div>
          
          
          <div style="background-color: #ff9a4a;" class="row rounded my-2 runningLow w-100 mx-auto p-1">
              <span>Recipe #3</span>
              <span>Description</span>
              <span>Number of Items</span>

              <span>
                <button type="button" class="btn btn-danger btn-sm" id="delete" data-id="{{ingredients.id}}"><i class="far fa-trash-alt"></i></button>
              </span>
          </div>


            {{#each items as |item|}}
                <div style="background-color: #ff9a4a;" class="row rounded my-2 runningLow w-100 mx-auto p-1">
                  <span>{{name}}</span>
                  <span>{{description}}</span>
                  <span>{{total items}}</span>
                 
                  <span>
                  <button type="button" class="btn btn-danger btn-sm" id="delete" data-id="{{ingredients.id}}"><i class="far fa-trash-alt"></i></button>
                  </span>
                </div>

              {{/each}}
          </h6>

        </div>
      </div>
  </div>    
  
</div>
